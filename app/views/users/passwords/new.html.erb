<div class="flex justify-center">
  <div class="w-full max-w-md px-6 text-white font-manrope">
    <h2 class="mb-6 text-3xl font-bold">Problemas de conexion</h2>
    <div class="mb-10">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="mb-4 field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input w-full', placeholder:'E-mail' %>
        </div>
        <div class="actions">
          <%= f.submit "Mandar instrucciones", class:'btn-primary mb-4' %>
          <div class="flex justify-center space-x-1 text-silver">
            <%= inline_svg_tag('svg/info.svg', class:'w-4') %>
            <p class="text-xs font-manrope"><%= t('devise.shared.check_spams') %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="flex flex-col items-center space-y-4 text-sm">
      <%= link_to t('devise.shared.links.sign_in'), new_session_path(resource_name), class:'text-primary_blue hover:underline' %>
      <span class="w-16 border-t border-black_coral"></span>
      <%= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name), class:'text-silver hover:underline' %>
    </div>
  </div>
</div>
