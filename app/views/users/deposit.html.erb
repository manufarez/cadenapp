<div class="flex justify-center">
  <div class="w-full max-w-md px-6 mb-10 text-white font-manrope">
    <div class="flex items-center justify-between mb-10">
      <%= link_to abandon_complete_profile_path do %>
        <%= inline_svg_tag('svg/arrow_left.svg', class:'text-white w-6') %>
      <% end %>
      <h1 class="text-lg font-bold text-white text font-manrope"><%= t('user.deposit') %></h1>
      <span class="w-5"></span>
    </div>
    <div class="mb-10">
      <form action="/process_form" accept-charset="UTF-8" method="post" class="max-w-sm mx-auto">
        <div class="mb-4">
          <input type="text" name="first_name" id="first_name" autofocus class="w-full input" placeholder="Nombre">
        </div>
        <div class="mb-4">
          <input type="email" name="email" id="email" autofocus class="w-full input" placeholder="E-mail">
        </div>
        <div class="actions">
          <input type="submit" name="commit" value="Submit" class="btn-primary" data-disable-with="Submit">
        </div>
      </form>
    </div>
  </div>
</div>
