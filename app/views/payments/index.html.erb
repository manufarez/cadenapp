<div class="flex justify-center max-w-md mx-auto">
  <div class="w-full px-6 mb-6 text-white font-manrope">
    <div class="flex items-center justify-between mb-10">
      <%= link_to @cadena do %>
        <%= inline_svg_tag('svg/arrow_left.svg', class:'text-white w-6') %>
      <% end %>
      <h1 class="text-lg font-bold text-white text font-manrope">Pagos <%= @cadena.name %></h1>
      <span class="w-5"></span>
    </div>
    <div class="flex flex-col space-y-4">
      <% @payments.each do |payment| %>
        <%= render 'payments/single_payments', payment: payment %>
      <% end %>
    </div>
  </div>
</div>
