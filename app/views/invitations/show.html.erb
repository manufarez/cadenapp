<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <%= render @invitation %>
    <%= link_to 'Edit this invitation', edit_cadena_invitation(@invitation), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this invitation', cadena_invitation(@invitation), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to invitations', cadena_invitations_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
