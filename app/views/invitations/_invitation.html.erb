<div id="<%= dom_id invitation %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Phone:</strong>
    <%= invitation.phone %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">First name:</strong>
    <%= invitation.first_name %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Last name:</strong>
    <%= invitation.last_name %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Accepted:</strong>
    <%= invitation.accepted %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Cadena:</strong>
    <%= invitation.cadena_id %>
  </p>
</div>
