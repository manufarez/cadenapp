<ul role="list" class="hidden" data-cadena-period-target="global">
  <% cadena.participants.order(position: :asc).each do |participant| %>
    <li class="px-5 py-3 my-3 bg-midnight rounded-2xl first:mt-0 <%= cadena.next_paid_participant(global_date) == participant ? 'border border-blue-600' : '' %>">
      <div class="flex items-center space-x-4">
        <span class="text-silver"><%= participant.position %></span>
        <div class="flex-shrink-0">
          <% if current_user.is_admin %>
            <%= link_to participant.user do %>
              <%= image_tag participant.avatar, alt: "#{participant.name} avatar", class:"w-8 h-8 rounded-full hover:opacity-30" %>
            <% end %>
          <% else %>
            <%= image_tag participant.avatar, alt: "#{participant.name} avatar", class:"w-8 h-8 rounded-full" %>
          <% end %>
        </div>
        <div class="flex-1 min-w-0">
          <div class="text-sm font-medium text-white truncate">
            <%= participant.name %>
          </div>
          <span class="text-xs text-placeholder_gray font-manrope"><%= participant.withdrawal_day.strftime('%d/%m/%Y') %></span>
        </div>
        <% if participant.user == cadena.admin %>
          <p class="px-2 py-1 text-xs text-gray-400 uppercase border border-gray-400 rounded-lg">Admin</p>
        <% elsif participant.user == current_user %>
          <p class="px-2 py-1 text-xs text-gray-400 uppercase border border-gray-400 rounded-lg">Yo</p>
        <% end %>
        <% if participant.paid_by_everyone %>
          <%= inline_svg_tag('svg/check.svg', class: 'w-5 text-white rounded-full bg-blue-600 p-1') %>
        <% else %>
          <span class="w-5 h-5 border rounded-full border-midnight_light bg-midnight_light/10"></span>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
