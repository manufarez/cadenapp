<div class="mx-auto max-w-7xl">

  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold leading-6 text-white font-nimbus-ext">Cadenas</h1>
    <%= link_to 'New cadena', new_cadena_path, class: "rounded-lg py-2 px-4 hover:bg-blue-700 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="relative mb-12 overflow-x-auto border shadow-md sm:rounded-lg border-jaguar_light/50">
    <table class="w-full text-sm text-left text-gray-400 border">
      <thead class="text-xs text-gray-200 uppercase bg-jaguar_light">
        <tr>
          <th scope="col" class="px-6 py-3">Name</th>
          <th scope="col" class="px-6 py-3 text-center">Participants</th>
          <th scope="col" class="px-6 py-3">Status</th>
        </tr>
      </thead>
      <tbody>
        <% @cadenas.each do |cadena| %>
          <tr class="odd:bg-transparent even:bg-night_dark">
            <td class="px-6 py-4 font-medium text-white whitespace-nowrap">
              <%= link_to cadena, class:'hover:underline' do %><%= cadena.name %><% end %>
            </td>
            <td class="px-6 py-4 text-center"><%= cadena.users.count %></td>
            <td class="px-6 py-4"><%= cadena.status.capitalize %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
