<%= form_with(model: cadena, class: "text-white w-full max-w-md font-manrope mx-auto", data: { controller: "cadena"}) do |f| %>
  <% if cadena.errors.any? %>
    <div id="error_explanation" class="px-3 py-2 my-3 text-sm font-medium text-red-500 rounded-lg bg-red-50">
      <h2>t('')</h2>
      <ul class="list-disc list-inside">
        <% cadena.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= f.label t('cadena.cadena_name'), class:'text-silver text-sm' %>
    <%= f.text_field :name, placeholder: 'Ex: Amigos del parque', class: "input w-full" %>
  </div>
  <div class="mb-4">
    <%= f.label t('cadena.desired_participants'), class:'text-silver text-sm' %>
    <%= f.number_field :desired_participants, placeholder: 'Min: 3 - Max: 19', class: "input w-full", min: 3, max: 19, data: {cadena_target: "participants", action:"cadena#updateInstallments cadena#updateEndDate"} %>
  </div>
  <div class="flex items-end mb-4 space-x-3">
    <div class="w-1/2">
      <%= f.label :periodicity, t('cadena.periodicity'), class:'text-silver text-sm' %>
      <%= f.select :periodicity, options_for_select([['Diaria', 'daily'], ['Quincenal', 'bimonthly'], ['Mensual', 'monthly']]), {}, class: "block border-none rounded-xl text-white bg-steel outline-none p-4 w-full", data: {cadena_target: "periodicity", action:"cadena#updateInstallments cadena#updateEndDate"} %>
    </div>
    <div class="w-1/2">
      <%= f.label :end_date, t('cadena.installments') + '*', class:'text-silver text-sm' %>
      <%= f.number_field :desired_installments, placeholder: t('cadena.auto_calc'), class: 'input w-full', min: 3, max: 19, data: {cadena_target:"installments"}, readonly: true %>
    </div>
  </div>
  <div class="mb-4">
    <input placeholder="Min: 100k - Max: 500k" class="w-full input" min="100000" max="500000" data-cadena-target="installmentDisplay" data-action="cadena#updateSavingGoal" id="installmentDisplay" type="text">
    <%= f.hidden_field :installment_value, data:{cadena_target:"installmentValue"}, id:"installmentValue" %>
  </div>
  <div class="mb-4">
    <%= f.label :start_date, t('cadena.start_date'), class:'text-silver text-sm' %>
    <%= f.date_field :start_date, value: f.object.start_date&.strftime("%d/%m/%Y"), class: "block border-none date rounded-xl text-white bg-steel outline-none p-4 w-full start_date placeholder:text-sm", data:{cadena_target:"startDate", action:'cadena#updateEndDate'}, placeholder: 'En el futuro - ex: ' + Time.zone.now.next_day.strftime('%d/%m/%Y') %>
  </div>
  <div class="mb-4">
    <%= f.label :end_date, t('cadena.end_date') + '*', class:'text-silver text-sm' %>
    <%= f.date_field :end_date, readonly: true, placeholder: t('cadena.auto_calc'), class: "block border-none date rounded-xl end_date text-white bg-steel outline-none p-4 w-full hover:cursor-not-allowed placeholder:text-sm", data:{cadena_target:"endDate"} %>
  </div>
  <div class="mb-4">
    <%= f.label :saving_goal, t('cadena.saving_goal') + '*', class:'text-silver text-sm' %>
    <input placeholder="<%= t('cadena.auto_calc') %>" class="w-full input" data-cadena-target="savingGoalDisplay" type="text">
    <%= f.hidden_field :saving_goal, class: "block border-none date rounded-xl text-white bg-steel outline-none p-4 w-full hover:cursor-not-allowed", data:{cadena_target:"savingGoal"} %>
  </div>
  <div class="flex items-center mb-4 space-x-2 text-sm field text-silver <%= f.object.new_record? ? '' : 'hidden' %>">
    <%= f.check_box :accepts_admin_terms, class:'rounded bg-steel focus:ring-0 focus:ring-offset-0 hover:cursor-pointer' %>
    <label for="user[accepts_admin_terms]" id="user_accepts_terms"><%= t('user.consent') %> <a class="text-primary_blue hover:underline" href="/terms"><%= t('user.admin_terms&conditions') %></a></label>
  </div>
  <div class="inline">
    <%= f.submit f.object.new_record? ? t('cadena.create') : t('cadena.modify'), class: "btn-primary" %>
  </div>
<% end %>
<p class="mt-4 text-sm text-center text-placeholder_gray">*: Informaciones calculadas autom√°ticamente</p>
