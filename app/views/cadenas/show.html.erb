<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>

    <%= render @cadena %>

    <%= link_to 'Edit this cadena', edit_cadena_path(@cadena), class: "border focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 border-blue-600 text-blue-600 hover:text-white hover:bg-blue-600 focus:ring-blue-800" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this cadena', cadena_path(@cadena), method: :delete, class: "hover:text-white border focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 border-red-500 text-red-500 hover:bg-red-600 focus:ring-red-900" %>
    </div>
  </div>
</div>
