<div class="flex justify-between px-5 py-6 md:px-6 bg-mirage">
  <%= link_to root_path, class:'mr-2.5 flex sm:block w-fit', style:'min-width: 42px; height:42px' do %>
    <h1 class="hidden px-2 py-1 mb-2 text-xl italic font-bold tracking-tighter rounded-md text-jaguar bg-mayo font-nimbus w-fit sm:block">Cadenapp</h1>
    <%= image_tag 'square_logo.png', class:'sm:hidden' %>
  <% end %>
  <% if current_user %>
    <%= render 'shared/date_selector' %>
    <%= render 'shared/cadenas_shortcut' %>
    <% if current_user.is_admin %>
      <%= render 'shared/users_shortcut' %>
    <% end %>
    <%= render 'shared/user' %>
  <% end %>
</div>
